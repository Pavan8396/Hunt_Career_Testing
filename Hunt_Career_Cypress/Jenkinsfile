pipeline {
    agent any

    tools {
        nodejs 'NodeJS'
    }

    stages {
        stage('Checkout') {
            steps {
                echo '----------------------------------------'
                echo '        CHECKING OUT SOURCE CODE'
                echo '----------------------------------------'
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('Hunt_Career_Cypress') {
                    echo '----------------------------------------'
                    echo '      INSTALLING NPM DEPENDENCIES'
                    echo '----------------------------------------'
                    bat 'npm install'
                }
            }
        }

        stage('Run Cypress Tests') {
    steps {
        dir('Hunt_Career_Cypress') {
            echo '----------------------------------------'
            echo '          RUNNING CYPRESS TESTS'
            echo '----------------------------------------'
            script {
                try {
                    bat 'npx cypress run --reporter mochawesome --reporter-options quiet=true'
                } catch (any) {
                    currentBuild.result = 'UNSTABLE'
                    echo "Cypress tests failed."
                }
            }
        }
    }
}

stage('Parse Test Results') {
    steps {
        dir('Hunt_Career_Cypress/mochawesome-report') {
            script {
                def report = readJSON file: 'mochawesome.json'
                def stats = report.stats
                echo "----------------------------------------"
                echo "        CYPRESS TEST SUMMARY"
                echo "----------------------------------------"
                echo " Total:   ${stats.tests}"
                echo " Passed:  ${stats.passes}"
                echo " Failed:  ${stats.failures}"
                echo " Skipped: ${stats.pending}"
                echo " Duration: ${stats.duration} ms"
            }
        }
    }
}

    }

    post {
        always {
            echo '----------------------------------------'
            echo '        ARCHIVING & PUBLISHING REPORTS'
            echo '----------------------------------------'
            archiveArtifacts artifacts: 'Hunt_Career_Cypress/mochawesome-report/mochawesome.html', allowEmptyArchive: true
            archiveArtifacts artifacts: 'Hunt_Career_Cypress/cypress/screenshots/**/*.png', allowEmptyArchive: true
            archiveArtifacts artifacts: 'Hunt_Career_Cypress/cypress/videos/**/*.mp4', allowEmptyArchive: true
            publishHTML(target: [
                allowMissing: true,
                alwaysLinkToLastBuild: true,
                keepAll: true,
                reportDir: 'Hunt_Career_Cypress/mochawesome-report',
                reportFiles: 'mochawesome.html',
                reportName: 'Cypress Test Report'
            ])
        }
    }
}
