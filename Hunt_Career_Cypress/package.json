{
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^2.41.2",
    "allure-commandline": "^2.34.1",
    "cypress": "^14.4.1",
    "cypress-mochawesome-reporter": "^3.8.2",
    "cypress-xpath": "^2.0.1",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.2.0"
  },
  "dependencies": {
    "@faker-js/faker": "^9.7.0"
  },
  "scripts": {
    "cypress:open": "cypress open",
    "cypress:run": "cypress run --headed",
    "report:merge": "mochawesome-merge reports/mochawesome/*.json -o reports/mochawesome/mochawesome.json",
    "report:generate": "marge reports/mochawesome/mochawesome.json -f report -o reports/mochawesome",
    "report:full": "npm run report:merge && npm run report:generate",
    "test:run:report": "npm run cypress:run && npm run report:full && open-cli reports/mochawesome/index.html"
  }
}
