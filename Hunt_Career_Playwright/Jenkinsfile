// Function to print a standardized banner
def printBanner(message) {
    echo '----------------------------------------'
    echo "    ${message}"
    echo '----------------------------------------'
}

pipeline {
    agent any

    tools {
        // Make sure you have configured NodeJS tool in Jenkins as 'NodeJS'
        nodejs 'NodeJS'
    }

    options {
        timestamps()
        timeout(time: 30, unit: 'MINUTES')
        skipDefaultCheckout true
    }

    parameters {
        string(name: 'BRANCH', defaultValue: 'main', description: 'Git branch to build from')
    }

    stages {
        stage('Checkout') {
            steps {
                printBanner("CHECKING OUT SOURCE CODE: ${params.BRANCH}")
                cleanWs()
                checkout scm
            }
        }

        stage('Setup & Install Dependencies') {
            steps {
                dir('Hunt_Career_Playwright') {
                    script {
                        printBanner('INSTALLING NPM DEPENDENCIES')
                        bat 'npm ci'

                        printBanner('INSTALLING PLAYWRIGHT BROWSERS')
                        bat 'npx playwright install --with-deps'
                    }
                }
            }
        }

        stage('Run Playwright Tests') {
            steps {
                dir('Hunt_Career_Playwright') {
                    script {
                        printBanner('RUNNING PLAYWRIGHT TESTS')
                        // Run tests but mark UNSTABLE if tests fail
                        def result = bat(returnStatus: true, script: 'npx playwright test')

                        if (result != 0) {
                            echo "⚠️ Some Playwright tests failed (exit code ${result})"
                            currentBuild.result = 'UNSTABLE'
                        } else {
                            echo "✅ Playwright tests passed successfully."
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            dir('Hunt_Career_Playwright') {
                script {
                    try {
                        printBanner('ARCHIVING ARTIFACTS & PUBLISHING REPORTS')

                        // Archive Playwright HTML report
                        archiveArtifacts artifacts: 'playwright-report/**/*', allowEmptyArchive: true

                        // Publish HTML report if plugin installed
                        publishHTML(target: [
                            allowMissing: true,
                            alwaysLinkToLastBuild: true,
                            keepAll: true,
                            reportDir: 'playwright-report',
                            reportFiles: 'index.html',
                            reportName: 'Playwright Test Report'
                        ])
                    } catch (err) {
                        echo "⚠️ Could not publish reports: ${err.message}"
                    }
                }
            }
        }

        unstable {
            echo "⚠️ Build marked as UNSTABLE due to Playwright test failures."
        }

        failure {
            echo "❌ Pipeline failed due to a critical error (not test failures)."
        }

        success {
            echo "✅ All Playwright tests passed successfully."
        }
    }
}
